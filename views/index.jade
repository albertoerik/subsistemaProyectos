extends layout

block content
    h2(style="color: rgba(255,255,255,.7);margin:1.2em") SERVICIO DEPARTAMENTAL DE CAMINOS POTOSI
    .col-md-12
        form.col-md-6.col-md-offset-3(style="padding:3em")
            h2(style="margin:0;color: #f36161").subtitulo BIENVENIDO
            
            .form-group.has-error.has-feedback.formularios(id="loginnick")
                label.control-label(for='inputError2',style="color: #a29595") NOMBRE DE USUARIO
                input#inputError2.form-control.input-lg(type='text', aria-describedby='inputError2Status', placeholder='Ejemplo: Limbert1990')
                span.glyphicon.glyphicon-remove.form-control-feedback(aria-hidden='true')
            .form-group.has-error.has-feedback.formularios(id="loginpass")
                label.control-label(for='inputError2',style="color: #a29595") CONTRASEÑA
                input#inputError2.form-control.input-lg(type='password', aria-describedby='inputError2Status', placeholder='Escriba la contraseña')
                span.glyphicon.glyphicon-remove.form-control-feedback(aria-hidden='true')
            .control-label(style="margin:0.5em;color:#f76969;text-align:center",id="estadolog")
            button.btn.btn-info.btn-lg.disabled.col-md-6.col-md-offset-3(type='button',id="btnEnviarLogin",data-loading-text="Verificando datos..",style="margin-top:10px") INICIAR SESION
    script(src="/javascripts/bootstrap.min.js")